<table>
  <% book.comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to user_path(comment.user) do %>
        <%= attachment_image_tag comment.user, :profile_image, format:'jpeg', fallback:'no_image.jpg', size:'40x40' %><br/>
        <%= comment.user.name %>
        <% end %>
      </td>
      <td><%= comment.comment %></td>
      <% if comment.user == current_user %>
      <td><%= link_to 'Destroy', book_comment_path(comment.book.id, comment.id), method: :delete, remote: true, class:"btn btn-danger" %></td>
      <% end %>
    </tr>
  <% end %>
</table>